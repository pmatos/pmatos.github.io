{
  "name": "minimalism",
  "version": "0.1.00",
  "description": "I beg you God, make sure that it is the last!",
  "main": "index.js",
  "scripts": {
    "build": "eleventy",
    "start": "eleventy --serve",
    "dev": "run-p dev:*",
    "go!": "run-s clean icon css:* eleventy",
    "build:ci": "run-s clean css:* eleventy",
    "clean": "rimraf public",
    "css:website": "npx @tailwindcss/cli -i src/_11ty/_tailwindCSS/raw-website.css -o public/css/style.css --minify",
    "eleventy": "eleventy",
    "dev:css": "npx @tailwindcss/cli -i src/_11ty/_tailwindCSS/raw-website.css -o public/css/style.css --watch --minify",
    "dev:11ty": "eleventy --serve --watch",
    "icon": "npx pwa-asset-generator logo.png ./src/_11ty/_static/favicon -b -m -q 100 -t png -f -w -e "
  },
  "keywords": [
    "Website",
    "Blog",
    "11ty",
    "Tailwindcss",
    "SEO",
    "PWA"
  ],
  "author": "Marco Micale <marcomicale@gmail.com> (https://www.marcomicale.eu/)",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@tailwindcss/typography": "^0.5.19",
    "html-minifier-terser": "^7.2.0",
    "luxon": "^3.7.2",
    "markdown-it": "^14.1.0",
    "markdown-it-footnote": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "pwa-asset-generator": "^8.1.2",
    "rimraf": "^6.1.0",
    "tailwindcss": "^4.1.17",
    "temp": "^0.9.4"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "commander": "^14.0.2",
    "svg2roughjs": "^3.0.1"
  },
  "bin": {
    "llog": "./llog.js"
  }
}
